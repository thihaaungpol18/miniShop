<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.thiha.miniShop">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="org.thiha.miniShop.CartActivity"
            android:windowSoftInputMode="adjustPan" />
        <activity android:name="org.thiha.miniShop.ShowItemsByCategoryActivity" />
        <activity
            android:name="org.thiha.miniShop.SearchActivity"
            android:windowSoftInputMode="adjustPan|adjustResize" />
        <activity android:name="org.thiha.miniShop.GroceryItemActivity" />
        <activity android:name="org.thiha.miniShop.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service android:name="org.thiha.miniShop.TrackUserTime" />
    </application>

</manifest>